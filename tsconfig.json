{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "./dist",
    "allowJs": false,
    "target": "ES2020",
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "declaration": true,
    "lib": ["ES2020"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "./dist"]
}
